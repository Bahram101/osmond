generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String?  @unique
  fullName  String?
  password  String
  phone     String?
  avatarUrl String   @default("https://www.gravatar.com/avatar")
  role      Role     @default(CUSTOMER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products Product[]

  @@map("user")
}

enum Role {
  CUSTOMER
  ADMIN
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  published   Boolean  @default(true)
  image       String?  @default("https://img.freepik.com/free-vector/smartphone-cartoon_78370-590.jpg?w=740&t=st=1716205026~exp=1716205626~hmac=d514ec9889a7c40481421379ef067469a4c6e2ea8cf2302d391c93f11545cc79")
  views       Int      @default(0)
  price       Float    @default(0)
  quantity    Int      @default(0)
  barcode     String?  @unique
  userId      Int      @map("user_id")
  categoryId  Int      @map("category_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user     User     @relation(fields: [userId], references: [id])
  category Category @relation(fields: [categoryId], references: [id])

  sales      Sale[]
  arrivals   Arrival[]
  visitItems VisitItem[]

  @@map("product")
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  parentId  Int?     @map("parent_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  parent   Category?  @relation("Subcategories", fields: [parentId], references: [id])
  children Category[] @relation("Subcategories")

  products Product[]

  @@map("category")
}

model Sale {
  id        Int      @id @default(autoincrement())
  productId Int
  quantity  Int      @default(1)
  price     Float
  createdAt DateTime @default(now()) @map("created_at")

  product Product @relation(fields: [productId], references: [id])

  @@map("sale")
}

model Arrival {
  id        Int      @id @default(autoincrement())
  productId Int
  qty       Int
  note      String?
  costPrice Decimal?
  createdAt DateTime @default(now()) @map("created_at")

  product Product @relation(fields: [productId], references: [id])

  @@map("arrival")
}

model Client {
  id        Int      @id @default(autoincrement())
  fullName  String
  phone     String?
  note      String?
  createdAt DateTime @default(now()) @map("created_at")

  visits Visit[]

  @@map("client")
}

model Visit {
  id        Int         @id @default(autoincrement())
  clientId  Int
  status    VisitStatus @default(OPEN)
  createdAt DateTime    @default(now())

  client   Client      @relation(fields: [clientId], references: [id])
  items    VisitItem[]
  payments Payment[]

  @@map("visit")
}

enum VisitStatus {
  OPEN
  PARTIAL
  PAID
}

model VisitItem {
  id         Int   @id @default(autoincrement())
  visitId    Int
  productId  Int
  qty        Int
  price      Float
  total      Float
  paidAmount Float @default(0)

  visit   Visit   @relation(fields: [visitId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@map("visit_item")
}

model Payment {
  id        Int      @id @default(autoincrement())
  visitId   Int
  amount    Float
  note      String?
  createdAt DateTime @default(now()) @map("created_at")

  visit Visit @relation(fields: [visitId], references: [id])

  @@map("payment")
}
