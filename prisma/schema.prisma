generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  username  String?   @unique
  fullName  String?
  password  String
  phone     String?
  avatarUrl String    @default("https://www.gravatar.com/avatar")
  role      Role      @default(CUSTOMER)
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("user")
}

enum Role {
  CUSTOMER
  ADMIN
}

model Product {
  id           String   @id @default(cuid())
  name         String
  description  String?
  availability Boolean  @default(true)
  image        String?  @default("https://img.freepik.com/free-vector/smartphone-cartoon_78370-590.jpg?w=740&t=st=1716205026~exp=1716205626~hmac=d514ec9889a7c40481421379ef067469a4c6e2ea8cf2302d391c93f11545cc79")
  views        Int      @default(0)
  price        Float    @default(0)
  userId       String   @map("user_id")
  categoryId   String   @map("category_id")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
  user         User     @relation(fields: [userId], references: [id])
  category     Category @relation(fields: [categoryId], references: [id])

  @@map("product")
}

model Category {
  id        String   @id @default(cuid())
  name      String
  parentId  String?  @map("parent_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  products Product[]
  parent   Category?  @relation("Subcategories", fields: [parentId], references: [id])
  children Category[] @relation("Subcategories")

  @@map("category")
}
