generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  username  String?   @unique
  fullName  String?
  password  String
  phone     String?
  avatarUrl String    @default("https://www.gravatar.com/avatar")
  role      Role      @default(CUSTOMER)
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("user")
}

enum Role {
  CUSTOMER
  ADMIN
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  published   Boolean  @default(true)
  image       String?  @default("https://img.freepik.com/free-vector/smartphone-cartoon_78370-590.jpg?w=740&t=st=1716205026~exp=1716205626~hmac=d514ec9889a7c40481421379ef067469a4c6e2ea8cf2302d391c93f11545cc79")
  views       Int      @default(0)
  price       Float    @default(0)
  quantity    Int      @default(0)
  barcode     String?  @unique
  userId      String   @map("user_id")
  categoryId  String   @map("category_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  user        User     @relation(fields: [userId], references: [id])
  category    Category @relation(fields: [categoryId], references: [id])

  Sales   Sale[]
  arrival Arrival[]

  @@map("product")
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  parentId  String?  @map("parent_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  parent   Category?  @relation("Subcategories", fields: [parentId], references: [id])
  children Category[] @relation("Subcategories")
  products Product[]
  arrivals Arrival[]

  @@map("category")
}

model Sale {
  id        String   @id @default(cuid())
  productId String
  quantity  Int      @default(1)
  price     Float
  createdAt DateTime @default(now()) @map("created_at")

  product Product @relation(fields: [productId], references: [id])

  @@map("sale")
}

model Arrival {
  id        Int      @id @default(autoincrement())
  productId String
  quantity  Int
  createdAt DateTime @default(now()) @map("created_at")

  product    Product   @relation(fields: [productId], references: [id])
  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId String?

  @@map("arrival")
}
